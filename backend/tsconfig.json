{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"],
    "forceConsistentCasingInFileNames": true,

    // DŮLEŽITÉ: rootDir dej na projekt (nebo ho klidně úplně vynech)
    "rootDir": ".",
    "outDir": "./dist",

    // ať fungují importy jak ze src, tak ze scripts
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": ["src", "scripts"]
}